{
  "compilerOptions": {

    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./",
    "outDir": "./dist",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "skipLibCheck": true
  },
  "include": [
    "calculadoraSemPadroes/src/**/*", 
    "calculadoraSemPadroes/test/**/*",
    "calculadoraComPadroes/srcComPadroes/**/*", 
    "calculadoraComPadroes/testComPadroes/**/*",
    "prof_codigos/CalculadoraJurosSimplesRefatorada.ts", 
    "prof_codigos/ClaculadoraJurosSimplesRefatorada_test.ts"
  ]
}
