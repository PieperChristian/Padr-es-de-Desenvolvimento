{
  "compilerOptions": {

    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "./",
    "outDir": "./dist",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test", "prof_codigos/CalculadoraJurosSimplesRefatorada.ts", "prof_codigos/ClaculadoraJurosSimplesRefatorada_test.ts"]
}
